<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".Grafico">



    <TextView android:text="@string/grafico"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />



    <com.krugdev.gestordeestudo.Graf
        android:id="@+id/Graf"
        android:layout_width="match_parent"
        android:layout_below="@string/grafico"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        custom:circleColor="#ff0099"
        custom:circleLabel="Hello"
        custom:labelColor="#ffff66"
        />

    <TextView
        android:id="@+id/textTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Graf"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="37dp"
        android:textSize="40sp"
        android:textColor="#ffffff"
        android:text="00:00:00" />


    <Button
        android:id="@+id/btnStart"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="68dp"
        android:layout_below="@+id/textTimer"
        android:text="Start" />



    <Button
        android:id="@+id/btnPause"
        android:layout_width="90dp"
        android:layout_marginLeft="20dp"
        android:layout_height="45dp"
        android:layout_toRightOf="@+id/btnStart"
        android:text="Pause" />



    <Button
        android:layout_height="45dp"
        android:layout_width="100dp"
        android:onClick="btnPressed"
        android:text="@string/btn_label"
        android:layout_below="@+id/btnPause"
        />



</RelativeLayout>
